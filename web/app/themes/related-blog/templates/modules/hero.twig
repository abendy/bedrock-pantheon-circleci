{% set first = items|first %}

<section class="module hero {{ first.wrapper_classes }}"
  data-name="hero"
  data-type="hero">

  {% if first.image is defined and first.image is not empty %}
  <figure>
    {% if first.link is defined and first.link is not empty %}
    <a href="{{ first.link }}">
    {% endif %}

      <img src="{{ first.image|resize(1300, 445) }}" alt="{{ first.image_alt }}">

    {% if first.link is defined and first.link is not empty %}
    </a>
    {% endif %}

    {% if first.video_id is defined and first.video_id %}
    <!-- .module.video -->
    <div class="module video"
      data-name="video"
      data-type="video"
      {{ first.wrapper_attributes }}>
    </div>
    <!-- /.module.video -->
    {% endif %}

  </figure>
  {% endif %}

  <div class="hero__content column is-offset-1">
    {% if first.title is defined and first.title is not empty %}

    {% if h_tag is empty %}
    {% set h_tag = first.h_tag %}
    {% endif %}

    {% if first.link is defined and first.link is not empty %}
    <a href="{{ first.link }}">
    {% endif %}

      <{{ h_tag|default('h2') }} class="hero__title">{{ first.title }}</{{ h_tag|default('h2') }}>

    {% if first.link is defined and first.link is not empty %}
    </a>
    {% endif %}

    {% endif %}

    {% if first.text is defined and first.text is not empty %}
    <p class="hero__desc">{{ first.text }}</p>
    {% endif %}
  </div>
</section>
