<section class="module social-share"
  data-name="social-share"
  data-type="social-share">

  <div class="social-share__links">
    <ul class="social-share__list">
      <li class="social-share__link">
        <a href="https://www.facebook.com/sharer/sharer.php?u={{ current_url }}" class="ui-social" target="_blank">
          <i class="icon-font">facebook</i>
        </a>
      </li>

      <li class="social-share__link">
        <a href="https://twitter.com/home?status={{ current_url }}" class="ui-social" target="_blank">
          <i class="icon-font">twitter</i>
        </a>
      </li>

      <li class="social-share__link">
        <a href="mailto:?body={{ current_url }}" class="ui-social">
          <i class="icon-font">email</i>
        </a>
      </li>
    </ul>
  </div>
</section>
