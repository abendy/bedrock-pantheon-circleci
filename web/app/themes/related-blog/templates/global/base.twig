{% block html_head_container %}
{% include 'global/html-header.twig' %}
{% endblock %}

<body id="root" class="{{ body_class }}" data-theme="" data-template="base.twig">
  <a class="skip-link is-sr-only" href="#main">{{ _e( 'Skip to content') }}</a>

  <header id="header" class="module header" data-name="header">
    {% block header %}
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="{{ site.url }}" rel="home">
          <p class="site-name is-hidden">{{ site.name }}</p>
          {{ function('the_custom_logo') }}
        </a><!-- /.navbar-item -->

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarRelated">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div><!-- /.navbar-brand -->

      <div id="navbarRelated" class="navbar-menu">
        <div class="navbar-start">
          {% include "global/menu.twig" with {'menu': menu.get_items} %}
        </div><!-- /.navbar-start -->

        <div class="navbar-end">
          <div class="navbar-item tile is-vertical">
            <div class="social-media__links">
              <a href="https://www.facebook.com/" class="social-media__link" target="_blank">
                <i class="fab fa-facebook-f"></i>
              </a>
              <a href="https://twitter.com/" class="social-media__link" target="_blank">
                <i class="fab fa-twitter"></i>
              </a>
              <a href="https://www.instagram.com/" class="social-media__link" target="_blank">
                <i class="fab fa-instagram"></i>
              </a>
            </div><!-- /.social-media__links -->

            <form method="get" action="{{ site.url }}" role="search">
              <div class="field">
                <p class="control has-icons-left">
                  <input type="text" class="input is-small" name="s" placeholder="Search" autocomplete="off"/>
                  <span class="icon is-small is-left">
                    <i class="fas fa-search"></i>
                  </span>
                </p>
              </div>
              <button type="submit" class="is-sr-only">Search</button>
            </form>
          </div><!-- /.navbar-item -->

        </div><!-- /.navbar-end -->
      </div><!-- /.navbar-menu -->
    </nav>
    {% endblock %}
  </header>

  <section id="main" class="module section is-paddingless" role="main" data-name="main">
    <div class="container">
      {% if title %}
      <h1>{{ title }}</h1>
      {% endif %}

      {% block content %}
        Sorry, no content
      {% endblock %}
    </div><!-- /.container -->
  </section>

  {% block footer %}
  {% include 'global/footer.twig' %}

  {{ function('wp_footer') }}
  {% endblock %}
</body>
</html>
