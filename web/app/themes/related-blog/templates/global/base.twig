{% block html_head_container %}
{% include 'global/html-header.twig' %}
{% endblock %}

<body id="root" class="{{body_class}}" data-theme="" data-template="base.twig">
  <a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>

  <header id="header" class="module header" data-name="header">
    {% block header %}
    <div class="wrapper">
      <h1 class="hdr-logo" role="banner">
        <a class="hdr-logo-link" href="{{site.url}}" rel="home">{{site.name}}</a>
      </h1>
      <nav id="nav-main" class="nav-main" role="navigation">
        {% include "global/menu.twig" with {'menu': menu.get_items} %}
      </nav><!-- #nav-main -->
    </div>
    {% endblock %}
  </header>

  <main id="main" class="main" data-default="" role="main">
    <section id="content" role="main" class="content-wrapper">
      {% if title %}
      <h1>{{title}}</h1>
      {% endif %}

      <div class="wrapper {{sidebar_class}}">
        {% block content %}
          Sorry, no content
        {% endblock %}
      </div>

      {% if sidebar %}
      <aside class="layout-sidebar module sidebar" data-name="sidebar">
        {{sidebar}}
      </aside>
      {% endif %}
    </section>
  </main>

  {% block footer %}
  <script src="{{ site.theme.link }}/build/assets/scripts/main.js"></script>

  <footer id="footer" class="module footer" data-name="footer">
    {% include 'global/footer.twig' %}
  </footer>

  {{ function('wp_footer') }}
  {% endblock %}
</body>

</html>
